<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal">
    <Button
        android:id="@+id/textView_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_action_favorite"
        android:gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onCollectClick"
        android:text="收藏" />
    <Button
        android:id="@+id/textView_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_action_buy"
        android:gravity="center_vertical"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="onBuyClick"
        android:text="购买" />

</LinearLayout>